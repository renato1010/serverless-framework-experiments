{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "jsx": "react"
  },
  "include": ["src/**/*.ts", "serverless.ts", "src/functions/generate-pdf/document.tsx"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".webpack/**/*", "_warmup/**/*", ".vscode/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
